/* orderdetail.wxss */
.order-state{
  display: flex;
  width: 100%;
  height: 60rpx;
  border-bottom: 1px solid #eee;
  align-items: center;
}
.order-state text{
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #333;
}
.img-box{
  width: 100%;
  height: 350rpx;
  border-bottom: 1px solid #eee;
}
.o-detail-img{
    position: fixed; 
    width: 200rpx;
    height: 250rpx;
    top: 130rpx;
    left: 20rpx;
    box-shadow: 0 0rpx 30rpx rgba(0, 0, 0, .3);
}

.o-detail-intro{
  width: 100%;
}
.o-detail-title{
  position: fixed; 
  top: 130rpx;
  left: 240rpx;
  width: 300rpx;
  font-size: 40rpx;
  font-family: "黑体";
  height: 150rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.o-detail-money{
  font-family: "黑体";
  position: fixed; 
  font-size: 30rpx;
  right: 20rpx;
  top: 330rpx;
}
.o-detail-author{
  font-size: 40rpx;
}
.o-detail-text{
  padding-top: 30rpx;
  height: 50rpx;
  align-items: center;
  margin-left: 20rpx;
  color: gray;
  font-size: 30rpx;
  border-bottom: 1px solid #eee;
}

.operate-bg{
  box-sizing:border-box;
  position: fixed;
  bottom: 0;
  height: 120rpx;
  width: 100%;
  background: gainsboro;
  align-items: center;
  padding-top: 15rpx;
}

.operate-bg button{
  width: 300rpx;
  background: #1296db;
}

.operate{
  height: 90rpx;
  width: 300rpx;
  border: 1px solid #1296db;
  border-radius: 10rpx;
  color: #1296db
}