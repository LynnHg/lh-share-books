.wraper {
  padding: 0 20rpx;
}

.top-lc {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  background-color: #efefef;
  height: 50rpx;
  display: flex;
}

.top-lc image {
  height: 42rpx;
  width: 42rpx;
}

.top-text {
  height: 100%;
  font-size: 35rpx;
  color: #8a8a8a;
  flex: 1;
}

.section {
  position: relative;
  padding: 10rpx;
  margin: 20rpx 0;
  border: 1px solid #c8cccf;
  display: flex;
  height: 100rpx;
  border-radius: 5rpx;
  background-color: #efefef;
}

.section .label {
  padding-left: 20rpx;
  line-height: 100rpx;
}

.placeholder {
  color: #808080;
}

.section picker {
  line-height: 100rpx;
  width: 100%;
}

.section input {
  flex: 1;
  height: 100rpx;
  max-height: 100rpx;
  min-height: 0;
}

.section  input:focus {
  border: 1px solid #ff7496;
}
