.wraper {
  padding: 0 20rpx;
}

.top-lc {
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 170rpx;
  background-color: #efefef;
  border-radius: 40rpx;
  height: 40rpx;
  display: flex;
}

.top-lc image {
  height: 38rpx;
  width: 38rpx;
}

.top-text {
  height: 100%;
  font-size: 24rpx;
  color: #8a8a8a;
  flex: 1;
}

.section {
  padding: 10rpx;
  margin: 20rpx 0;
}

.section input {
  box-sizing: border-box;
  text-align: center;
  font-size: 1.4em;
  height: 2.7em;
  border-radius: 4px;
  border: 1px solid #c8cccf;
  color: #6a6f77;
  -web-kit-appearance: none;
  -moz-appearance: none;
  display: block;
  outline: 0;
  padding: 0 1em;
  text-decoration: none;
  width: 100%;
}

.section  input:focus {
  border: 1px solid #ff7496;
}
